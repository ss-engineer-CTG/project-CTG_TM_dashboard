{
  "name": "project-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "find-process": "^1.4.7",
    "next": "14.0.3",
    "react": "18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.3",
    "uuid": "^9.0.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "20.10.0",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.15",
    "@types/uuid": "^9.0.0",
    "autoprefixer": "10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.5",
    "typescript": "5.3.2"
  },
  "build": {
    "appId": "com.company.project-dashboard",
    "productName": "Project Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "frontend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "app.asar.unpacked/backend",
        "filter": ["**/*"]
      },
      {
        "from": "data",
        "to": "app.asar.unpacked/data",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "frontend/public/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "frontend/public/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "frontend/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
{
  "name": "project-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "find-process": "^1.4.10",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.company.project-dashboard",
    "productName": "Project Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "app.asar.unpacked/backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "data",
        "to": "app.asar.unpacked/data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "frontend/public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "frontend/public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "frontend/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

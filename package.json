{
  "name": "project-dashboard",
  "version": "1.0.0",
  "description": "プロジェクト進捗ダッシュボード",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "project",
    "dashboard",
    "electron",
    "python"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "find-process": "^1.7.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.yourdomain.projectdashboard",
    "productName": "Project Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!python/venv/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}